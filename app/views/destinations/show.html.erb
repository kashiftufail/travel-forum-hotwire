<%= render partial: "shared/slider" ,locals: {avatars: @destination.avatars} %> 
<div class="container-fluid py-5">
  <div class="container pt-5">
    <div class="row">
      <div class="col-lg-6" style="min-height: 500px;">
        <div class="position-relative h-100">                    
          <%= cl_image_tag(destination_avatar(@destination).key, class:"position-absolute w-100 h-100", height: 900, width: 1000 ,crop: :scale)%>
        </div>
      </div>
      <div class="col-lg-6 pt-5 pb-lg-5">
        <div class="about-text bg-white p-4 p-lg-5 my-lg-5">
          <h6 class="text-primary text-uppercase" style="letter-spacing: 5px;"><%= link_to @destination.tour.title, tour_path(@destination.tour) %></h6>
          <h1 class="mb-3"><%= @destination.title%></h1>
          <p><%= @destination.detail%></p>
          <h6 class="text-primary text-uppercase" style="letter-spacing: 5px;">Stay Nights: <%= @destination.stay_days%></h6>
          <a href="/" class="btn btn-primary mt-1">Book Now</a>
        </div>
      </div>
    </div>
  </div>
</div>