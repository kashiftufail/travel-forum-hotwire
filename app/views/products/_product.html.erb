<div class="col-lg-4 col-md-6" id="<%= dom_id product %>">
  <div class="single-product"> 
    <div class="product-img">
      <%= cl_image_tag(product.avatars[0].key, height: 261, class: "card-img", alt: "", crop: :scale) %>
      <div class="p_icon">
        
        <%= button_to line_items_path(:product_id => product.id),remote: true, method: :post do %>
          <i class="fa fa-shopping-cart"></i>
        <% end %>   
        
        <%= button_to line_items_path(:product_id => product.id), method: :post do %>
          <i class="fa fa-heart"></i>
        <% end %>           
        
      </div>
    </div>
    <div class="product-btm">      
      <h4><%= link_to product.title, product_path(product), class: "d-block"%></h4>
      <div class="mt-3">
        <span class="mr-4">$<%= product.price%></span>
        <del>save 35%</del>
      </div>
    </div>
  </div>
</div>  
