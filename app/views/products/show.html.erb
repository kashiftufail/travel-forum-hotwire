<section class="banner_area">
  <div class="banner_inner d-flex align-items-center">
    <div class="container">
      <div
        class="banner_content d-md-flex justify-content-between align-items-center"
        >
        <div class="mb-3 mb-md-0">
          <h2>Product Details</h2>
          <p><%=@product.title%></p>
        </div>
        <div class="page_link">
          <a href="index.html">Home</a>
          <a href="single-product.html">Product Details</a>
        </div>
      </div>
    </div>
  </div>
</section>


<div class="product_image_area">
  <div class="container">
    <div class="row s_product_inner">
      <div class="col-lg-6">
        <div class="s_product_img">
          <div
            id="carouselExampleIndicators"
            class="carousel slide"
            data-ride="carousel"
            >
            <ol class="carousel-indicators">
              <% @product.avatars.each_with_index do |avtr,index| %>
                <li
                  data-target="#carouselExampleIndicators"
                  data-slide-to="<%=index%>"
                  class= <%= index == 0 ? "active" : ""%>
                  >
                  <%= cl_image_tag(avtr.key, height: 60, Width: 60, alt: "", crop: :scale) %>
                  
                </li>
              <% end %>              
            </ol>
            <div class="carousel-inner">
              <% @product.avatars.each_with_index do |avtr,index| %>
              <div class="carousel-item <%= index == 0 ? "active" : ""%>">
                    <%= cl_image_tag(avtr.key, height: 600, Width: 555, class: "d-block w-100", alt: "", crop: :scale) %>
                
              </div>
              <% end %>        
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-5 offset-lg-1">
        <div class="s_product_text">
          <h3><%=@product.title%></h3>
          <h2>$<%=@product.price%></h2>
          <ul class="list">
            <li>
              <a class="active" href="#">
              <span>Category</span> : <%=@product.category.name%></a
                >
            </li>
            <li>
              <a href="#"> <span>Availibility</span> : In Stock</a>
            </li>
          </ul>
          <p>
            <%=@product.detail%>
          </p>
          
          <%= form_with(model: @line_item) do |p| %>
          
            <div class="product_count" data-controller="add-product">
            
              <label for="qty">Quantity:</label>
              <%= p.hidden_field :product_id, value: @product.id %>         
              <%= p.text_field :quantity, id: "sst", 
                  class:"input-text qty", value: "1", data: { add_product_target: :quantity }  %>         
              <button data-action='click->add-product#addQuantity'               
                class="increase items-count"
                type="button"
                >
              <i class="fas fa-angle-up"></i>
              </button>
              <button data-action='click->add-product#decreaseQuantity'               
                class="reduced items-count"
                type="button"
                >
              <i class="fas fa-angle-down"></i>
              </button>         
            
            </div>
            
            <div class="card_area">
              <%= p.submit "Add to Cart",class: "main_btn"%>            
              <a class="icon_btn" href="#">
              <i class="fa fa-diamond"></i>
              </a>
              <a class="icon_btn" href="#">
              <i class="fa fa-heart"></i>
              </a>
            </div>
          
          <% end %>  

        </div>
      </div>
    </div>
  </div>
</div>

